<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_InspHistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginStartDefault"
        android:textSize="@dimen/welcomeTextSize"
        android:textStyle="bold"
        android:text="@string/tv_historico_inspecoes" />

    <ListView
        android:layout_below="@id/tv_InspHistTitle"
        android:id="@+id/lv_InspHist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"
        android:layout_margin="@dimen/marginStartDefault"
        />
</RelativeLayout>